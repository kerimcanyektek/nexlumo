@using Lifena.Models.Entity;
@model List<TblAdmin>
@{
    ViewBag.Title = "Admin_User";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}
<style>
    .custom-header {
        color: white !important; /* Beyaz yazı rengi */
    }

    .custom-card {
        max-width: 600px; /* Kartın maksimum genişliği */
        margin: 0 auto; /* Ortalamak için */
    }
</style>

<div class="container-fluid py-4">
    <div class="card custom-card border-0 shadow-lg rounded-3">
        <div class="card-header bg-warning p-2">
            <!-- Daha az padding -->
            <h6 class="mb-0 custom-header">Kullanıcı Yönetimi</h6>
        </div>
        <div class="card-body p-3">
            <!-- Daha az padding -->
            @foreach (var x in Model)
            {<ul class="list-group mb-4">
                    <li class="list-group-item border-0 d-flex justify-content-between align-items-center border-radius-lg">

                        <div class="d-flex align-items-center">
                            <div class="d-flex flex-column">
                                <span class="text-muted text-xs">Kullanıcı adı:</span>
                                <h6 class="mb-0 text-dark text-sm">@x.username</h6>
                            </div>
                        </div>
                        <div class="d-flex">
                            <a href="/Admin_User/EditUser" class="btn btn-outline-primary btn-sm me-2">
                                <i class="fas fa-pencil-alt"></i> Düzenle
                            </a>
                            <a href="@Url.Action("DeleteUser", "Admin", new { id = x.id })" class="btn btn-outline-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Sil
                            </a>
                        </div>
                        
                    </li>
                    <!-- Diğer kullanıcılar için aynı yapı burada tekrarlanabilir -->
                </ul>}
                <div class="text-center">
                    <a href="/Admin/Admin_NewUser" class="btn btn-secondary btn-lg">Yeni Kullanıcı Ekle</a>
                </div>
            </div>
    </div>
</div>

