@model Lifena.Models.Entity.TblBlogs
@{
    ViewBag.Title = "Admin_BlogEdit";
    Layout = "~/Views/Shared/Admin_Layout.cshtml";
}

<div class="container">
    <h2>Blog Düzenle</h2>
    <form asp-action="Admin_BlogEdit" asp-controller="Admin" method="post">
        <div class="form-group">
            <label for="blogimg">Blog Resmi</label>
            <input type="text" class="form-control" id="blogimg" name="blogimg" value="@Model.blogimg" />
        </div>
        <div class="form-group">
            <label for="blogHeader">Başlık</label>
            <input type="text" class="form-control" id="blogHeader" name="blogHeader" value="@Model.blogHeader" />
        </div>
        <div class="form-group">
            <label for="blogSlogan">Slogan Yazısı</label>
            <input type="text" class="form-control" id="blogSlogan" name="blogSlogan" value="@Model.blogSlogan" />
        </div>
        <div class="form-group">
            <label for="blogForeword">Ön yazı</label>
            <textarea class="form-control" id="blogForeword" name="blogForeword" rows="10">@Model.blogForeword</textarea>
        </div>
        <div class="form-group">
            <label for="blogPost">Blog yazısı ilk paragraf</label>
            <textarea class="form-control" id="blogPost" name="blogPost" rows="10">@Model.blogPost</textarea>
        </div>
        <div class="form-group">
            <label for="blogPost2">Blog yazısı ikinci paragraf</label>
            <textarea class="form-control" id="blogPost2" name="blogPost2" rows="10">@Model.blogPost2</textarea>
        </div>
        <div class="form-group">
            <label for="blogPost3">Blog yazısı üçüncü paragraf</label>
            <textarea class="form-control" id="blogPost3" name="blogPost3" rows="10">@Model.blogPost3</textarea>
        </div>
        <div class="form-group">
            <label for="blogPost4">Blog yazısı son paragraf</label>
            <textarea class="form-control" id="blogPost4" name="blogPost4" rows="10">@Model.blogPost4</textarea>
        </div>
        <div class="form-group">
            <label for="authorName">Yazar</label>
            <input type="text" class="form-control" id="authorName" name="authorName" value="@Model.authorName" />
        </div>
        <div class="form-group">
            <label for="authorMission">Yazar Unvan</label>
            <input type="text" class="form-control" id="authorMission" name="authorMission" value="@Model.authorMission" />
        </div>
        <div class="form-group">
            <label for="authorimg">Yazar Resim</label>
            <input type="text" class="form-control" id="authorimg" name="authorimg" value="@Model.authorimg" />
        </div>

        <button type="submit" class="btn btn-primary">Güncelle</button>
    </form>
</div>

